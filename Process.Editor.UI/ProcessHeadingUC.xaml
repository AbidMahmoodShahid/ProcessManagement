<UserControl
    x:Class="Process.Editor.UI.ProcessHeadingUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Process.Editor.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Label
                HorizontalAlignment="Center"
                Content="{Binding SelectedProcess.Name, FallbackValue='No process selected.'}"
                FontSize="24" />
            <Label
                HorizontalAlignment="Center"
                Content="{Binding SelectedProcess.Id, FallbackValue='Please create or select a process.'}"
                FontSize="20" />
        </StackPanel>
    </Grid>

</UserControl>
