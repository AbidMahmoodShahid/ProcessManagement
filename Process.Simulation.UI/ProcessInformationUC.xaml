<UserControl
    x:Class="Process.Simulation.UI.ProcessInformationUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Process.Styling.Controls;assembly=Process.Styling"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Process.Simulation.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <controls:InoPanel Columns="2">
            <Label Content="ProcessName: " FontSize="24" />
            <Label Content="{Binding ProcessName, FallbackValue=UnknownProcessName}" FontSize="24" />
        </controls:InoPanel>

    </Grid>

</UserControl>
